@page "/matchs"
@attribute [Authorize]
@using ClassifiedAds.Blazor.Modules.Matchs.Components

<Blazorise.Row>
    <Column><Check TValue="bool">只看我</Check></Column>
    <Column><DateEdit TValue="DateTime?"></DateEdit></Column>
    <Column><DateEdit TValue="DateTime?"></DateEdit></Column>
    <Column>
        <Select TValue="int">
            <SelectItem Value="-1">活動類型</SelectItem>
        </Select>
    </Column>
    <Column><Button>篩選</Button></Column>
    <Column><Button Color="Color.Light" @onclick="Add">發起</Button></Column>
</Blazorise.Row>

@if (Matchs.Count > 0)
{
    <CardDeck>
        @foreach (var item in Matchs)
        {
            <Card>
                <CardImage Source="@item.ImageUrl" Alt="Card image cap 3"></CardImage>
                <CardBody>
                    <CardTitle Size="5">
                        <div><Icon Name="IconName.Mail" /> @item.CreateTime.ToString("MM/dd (ddd) tt hh:mm")</div> @item.Title
                    </CardTitle>
                    <CardSubtitle>
                        @if (item.Location != null)
                        {
                            @item.Location.Name
                        }
                        Card Subtitle
                    </CardSubtitle>
                    <div class="content">
                        <CardText>
                            @item.Description
                        </CardText>
                    </div>

                    <div class="line-end"><Button><span>@item.Joined</span>已報名</Button><Button Color="Color.Primary"
                            @onclick="(() => Join(item))">加入</Button></div>
                </CardBody>
                <CardFooter>@item.CreateTime.ToString("F") <div class="line-end"> By @item.Creater </div>
                </CardFooter>
            </Card>
        }
    </CardDeck>
}
else
{

}

<JoinDialog @ref="JoinDialog"></JoinDialog>